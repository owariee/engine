# Maintainer: Jo√£o Gabriel Sabatini <jgabrielsabatini@outlook.com>
pkgname=engine
pkgver=dev
pkgrel=1
epoch=1
pkgdesc="C++ and OpenGL game engine"
arch=('x86_64')
url="https://github.com/owariee/engine"
license=('MIT')
makedepends=(cmake libxrandr libxinerama libxcursor libxi mesa python)
source=('git+https://github.com/owariee/engine.git')
md5sums=('SKIP')

prepare() {
  cd $srcdir/$pkgname
  git submodule update --init --recursive
  mkdir -p build
  cd build
  cmake ..
}

build() {
  cd $pkgname/build
  make game
}

package() {
  cd $pkgname/build
  make DESTDIR="$pkgdir/" install
}
